{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Angular",
      "preLaunchTask": "npm: start:fullerstack",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}/apps/fullerstack"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch NestJS",
      "preLaunchTask": "npm: start:api",
      "localRoot": "${workspaceFolder}/apps/api/src",
      "remoteRoot": "${workspaceFolder}/dist/apps/api",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach NestJS",
      "sourceMaps": true,
      "restart": true,
      "protocol": "auto",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests",
      "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng",
      "args": ["test", "${input:libName}", "--runInBand=true", "--codeCoverage=false"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "trace": "all"
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "libName",
      "description": "Run jest tests from which nx.json project?",
      "options": [
        "fullerstack-e2e",
        "fullerstack",
        "api",
        "ngx-config",
        "ngx-logger",
        "agx-dto",
        "nxs-database"
      ],
      "default": "frameshare"
    }
  ],
  "compounds": [
    {
      "name": "Debug NestJS",
      "configurations": ["Launch NestJS", "Attach NestJS"]
    },
    {
      "name": "Debug NestJS and Angular",
      "configurations": ["Launch NestJS", "Attach NestJS", "Launch Angular"]
    }
  ]
}
